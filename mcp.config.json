{
  "name": "luaraujo.com",
  "version": "1.0.0",
  "mcp": {
    "version": "1.0.0",
    "continuityTool": {
      "repository": "Lucasdoreac/mcp-continuity-tool",
      "branch": "main",
      "updateInterval": "6h",
      "features": {
        "tokenOptimization": true,
        "contextManagement": true,
        "artifactManagement": true,
        "stateManagement": true
      }
    },
    "deployment": {
      "platform": "github-pages",
      "branch": "gh-pages",
      "domain": "luaraujo.com",
      "buildCommand": "npm run build",
      "outputDir": "dist"
    },
    "monitoring": {
      "enabled": true,
      "metrics": [
        "tokenCount",
        "contextSize",
        "responseTime",
        "uptime"
      ]
    }
  }
}